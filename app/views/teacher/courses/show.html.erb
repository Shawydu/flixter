<br>
<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1><%= @course.title %></h1>
	<br>
	<%= link_to 'Preview as a student', course_path(@course), class: 'btn btn-warning pull-right' %>
	<br class="clear">
	<div class="text-center">
		<%= link_to 'Add a new section', new_teacher_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
	</div>
	<br>
	<ul>
		<% @course.sections.each do |section| %>
			<li>
				<%= section.title %>
				<%= link_to 'New lesson', new_teacher_section_lesson_path(section), class: 'btn btn-primary btn-xs pull-right' %>
				<ul>
					<% section.lessons.each do |lesson| %>
						<li>
							<b><%= lesson.title %></b>
							-
							<%= lesson.subtitle %>
						</li>
					<% end -%>
				</ul>
				<br class="clear">
			</li>
		<% end -%>
	</ul>
</div>